<!DOCTYPE html>
<html>
  <head>
    <title>Taglibro</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="app">
    <div class="app-header">
      <div class="container">
        <div class="row">
          <%= link_to 'Taglibro', root_path %>
          <div class="row-extend"></div>
          <% if current_user %>
            <div><%= current_user.email %> (<%= link_to 'DÃ©connexion', logout_path, method: :post %>)</div>
          <% end %>
        </div>
      </div>
    </div>

    <% if notice or alert %>
      <div class="app-notifications">
        <%- if notice %>
          <div class="notification-notice">
            <div class="container">
              <%= notice %>
            </div>
          </div>
        <% end %>
        <%- if alert %>
          <div class="notification-alert">
            <div class="container">
              <%= alert %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="app-content">
      <div class="container">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
