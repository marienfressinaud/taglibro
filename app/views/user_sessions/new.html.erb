<div class="panel">
  <h1>Connexion</h1>

  <%= form_tag user_sessions_path, method: :post do %>

    <div class="form-group">
      <%= label_tag :email, 'Email' %>
      <%= text_field_tag :email, params[:email] %>
    </div>

    <div class="form-group">
      <%= label_tag :password, 'Mot de passe' %>
      <%= password_field_tag :password, params[:password] %>
    </div>

    <div class="form-group form-group-checkbox">
      <div class="checkbox-container">
        <%= check_box_tag :remember, params[:remember], true %>
        <%= label_tag :remember, 'Rester connecté' %>
      </div>
    </div>

    <div class="form-group form-group-actions">
      <%= submit_tag 'Se connecter', class: 'btn btn-primary' %>
      <%= link_to 'Vous n’avez pas de compte ?', register_path, class: 'btn btn-link' %>
    </div>

    <div class="form-group form-group-actions">
      <%= link_to 'Vous avez oublié votre mot de passe ?', new_password_reset_path, class: 'btn btn-link' %>
    </div>

  <% end %>
</div>
